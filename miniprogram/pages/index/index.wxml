<view class="page">
    <view class="page__hd">
        <view class="page__title">余半仙</view>
        <view class="page__desc">《剑侠情缘网络版叁》（剑网3）实用小工具。</view>
    </view>
    <view class="page__bd">
        <view class="weui-grids">
            <block wx:for="{{tools}}">
                <navigator url="{{item.url}}" class="weui-grid" hover-class="weui-grid_active">
                    <image class="weui-grid__icon" src="{{item.icon}}"/>
                    <view class="weui-grid__label">{{item.text}}</view>
                </navigator>
            </block>
        </view>
    </view>
</view>