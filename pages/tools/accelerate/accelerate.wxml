<!--pages/tools/accelerate/accelerate.wxml-->
<view class="page">
    <view class="weui-form">
        <view class="weui-form__text-area">
            <view class="weui-form__title">加速宝典</view>
            <view class="weui-form__desc">技能加速阈值计算</view>
        </view>
        <view class="weui-form__control-area">
            <view class="weui-cells__group weui-cells__group_form">
                <view class="weui-cells__title">技能时间（秒）</view>
                <view class="weui-cells weui-cells_form">
                    <view class="weui-cell">
                        <input class="weui-input" type="digit" bind:input="onCDInput" placeholder="技能CD/单跳间隔"/>
                    </view>
                </view>
            </view>
        </view>
        <view class="weui-form__tips-area">
            <button type="primary" bind:tap="calulateThreshold">确定</button>
        </view>
        <block wx:if="{{thresholds.length > 0}}">
            <view class="line"></view>
            <view class="weui-flex">
                <view class="weui-flex__item"><view class="placeholder">加速段位</view></view>
                <view class="weui-flex__item"><view class="placeholder">加速值</view></view>
                <view class="weui-flex__item"><view class="placeholder">实际时间</view></view>
            </view>
            <view wx:for="{{thresholds}}" wx:key="index" class="weui-flex">
                <view class="weui-flex__item"><view class="placeholder">{{item.index}}</view></view>
                <view class="weui-flex__item"><view class="placeholder">{{item.value}}</view></view>
                <view class="weui-flex__item"><view class="placeholder">{{item.time}}</view></view>
            </view>
        </block>
    </view>

